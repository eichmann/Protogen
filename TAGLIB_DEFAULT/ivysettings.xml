<ivysettings>
	<settings defaultResolver="default" />

	<property name="ivy.local.default.root" value="${local-repository}" />
	<property name="ivy.local.default.ivy.pattern" value="[organization]/[artifact]-[revision].[ext]" />
	<property name="ivy.local.default.artifact.pattern" value="[organization]/[artifact]-[revision].[ext]" />


	<property name="ivy.shared.default.root" value="${shared-repository}" />
	<property name="ivy.shared.default.ivy.pattern" value="[organization]/[artifact]-[revision].[ext]" />
	<property name="ivy.shared.default.artifact.pattern" value="[organization]/[artifact]-[revision].[ext]" />


	<resolvers>
		<chain name="default">
			<url name="shared">
				<ivy pattern="${ivy.shared.default.root}${ivy.shared.default.ivy.pattern}" />
				<artifact pattern="${ivy.shared.default.root}${ivy.shared.default.artifact.pattern}" />
			</url>

			<filesystem name="local">
				<ivy pattern="${ivy.local.default.root}/${ivy.local.default.ivy.pattern}" />
				<artifact pattern="${ivy.local.default.root}/${ivy.local.default.artifact.pattern}" />
			</filesystem>
		</chain>

	</resolvers>




</ivysettings>
 